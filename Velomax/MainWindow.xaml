<Window x:Class="Velomax.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Velomax"
        mc:Ignorable="d"
        Title="Accueil" Height="450" Width="860" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="images/vélo3.jpg" Stretch="UniformToFill"/>
        </Canvas.Background>
        <Label x:Name="VeloMax" Content="VéloMax" HorizontalAlignment="Center" Height="90" VerticalAlignment="Top" Width="833" FontSize="72" FontFamily="Courier New" FontStyle="Italic" Grid.Column="1" Canvas.Left="11" Canvas.Top="19" HorizontalContentAlignment="Center"/>
        <Button x:Name="bStockPieces" Content="Stock pièces" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="215" FontSize="36" FontFamily="Corbel Light" Background="#FF299ACF" BorderBrush="#FFC33F23" Cursor="Hand" Click="OuvrirStockPieces" Grid.Column="1" Canvas.Left="44" Canvas.Top="292">
            <Button.Effect>
                <DropShadowEffect Color="#FFC33F23"/>
            </Button.Effect>
        </Button>
        <Button x:Name="bClients" Content="Clients" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="215" FontSize="36" FontFamily="Corbel Light" Background="#FF299ACF" BorderBrush="#FFC33F23" Cursor="Hand" Grid.Column="1" Canvas.Left="321" Canvas.Top="292" Click="bClients_Click">
            <Button.Effect>
                <DropShadowEffect Color="#FFC33F23"/>
            </Button.Effect>
        </Button>
        <Button x:Name="bFournisseurs" Content="Fournisseurs" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="215" FontSize="36" FontFamily="Corbel Light" Background="#FF299ACF" BorderBrush="#FFC33F23" Cursor="Hand" Grid.Column="1" Canvas.Left="321" Canvas.Top="172" Click="bFournisseurs_Click">
            <Button.Effect>
                <DropShadowEffect Color="#FFC33F23"/>
            </Button.Effect>
        </Button>
        <Button x:Name="bCommandes" Content="Commandes" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="215" FontSize="36" FontFamily="Corbel Light" Background="#FF299ACF" BorderBrush="#FFC33F23" Cursor="Hand" Grid.Column="1" Canvas.Left="589" Canvas.Top="172" Click="bCommandes_Click">
            <Button.Effect>
                <DropShadowEffect Color="#FFC33F23"/>
            </Button.Effect>
        </Button>
        <Button x:Name="bStockVelos" Content="Stock vélos" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="215" FontSize="36" FontFamily="Corbel Light" Background="#FF299ACF" BorderBrush="#FFC33F23" Cursor="Hand" Click="OuvrirStockVelos" Canvas.Left="44" Canvas.Top="172">
            <Button.Effect>
                <DropShadowEffect Color="#FFC33F23"/>
            </Button.Effect>
        </Button>
        <Button x:Name="bAutre" Content="Autre" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="215" FontSize="36" FontFamily="Corbel Light" Background="#FF299ACF" BorderBrush="#FFC33F23" Cursor="Hand" Canvas.Left="589" Canvas.Top="292" Click="bAutre_Click">
            <Button.Effect>
                <DropShadowEffect Color="#FFC33F23"/>
            </Button.Effect>
        </Button>
        <RadioButton Content="root" GroupName="UID" Canvas.Left="44" Canvas.Top="19" FontSize="20" VerticalContentAlignment="Center" IsChecked="True" Checked="RadioButton_Checked_1"/>
        <RadioButton Content="bozo" GroupName="UID" Canvas.Left="44" Canvas.Top="50" FontSize="20" VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
    </Canvas>
</Window>
